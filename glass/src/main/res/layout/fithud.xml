<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:id="@+id/text_container">

        <TextView
            android:id="@+id/liveCardStatus"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f7ff0005"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/liveCardBike"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="0px"
            android:src="@drawable/bike"/>

        <TextView
            android:id="@+id/liveCardBikeText"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:layout_marginLeft="110px"
            android:text="0.0 km/h"/>

        <ImageView
            android:id="@+id/liveCardHeart"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="110px"
            android:layout_marginLeft="0px"
            android:src="@drawable/heart"/>

        <TextView
            android:id="@+id/liveCardHeartText"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginTop="120px"
            android:layout_marginLeft="110px"
            android:text="0 bpm"/>

        <ImageView
            android:id="@+id/liveCardHeight"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="200px"
            android:layout_marginLeft="0px"
            android:src="@drawable/height"/>

        <TextView
            android:id="@+id/liveCardHeightText"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:layout_marginLeft="110px"
            android:text="0 m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Let's go!"
            android:id="@+id/summaryGuideText"
            android:layout_alignTop="@+id/liveCardHeightText"
            android:layout_toEndOf="@+id/liveCardHeightText" />

        <ImageView
            android:id="@+id/liveCardDistance"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="290px"
            android:layout_marginLeft="0px"
            android:src="@drawable/achievement_distance"/>

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110px"
            android:text="0 m"
            android:layout_alignTop="@+id/liveCardDistance"
            android:layout_toStartOf="@+id/summaryGuideText" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"
            android:text="00:00:00"
            android:layout_alignTop="@+id/liveCardBikeText" />


        <TextView
            android:id="@+id/caloriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"
            android:text="0 kCal"
            android:layout_alignTop="@+id/liveCardHeart" />

        <ImageView
            android:id="@+id/caloriesImage"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="300px"
            android:src="@drawable/calories_bw"
            android:layout_below="@+id/liveCardBike" />

        <TextView
            android:id="@+id/cadenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"
            android:text="0 U/min"
            android:layout_alignTop="@+id/distanceText" />

        <ImageView
            android:id="@+id/cadenceImage"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="300px"
            android:src="@drawable/calories_bw"
            android:layout_below="@+id/distanceText" />



    </RelativeLayout>

</FrameLayout>